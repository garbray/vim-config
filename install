#!/usr/bin/env bash
# mkdir -p ~/.config/nvim/plugin
# mkdir -p ~/.config/nvim/spell
repoPath="$PWD"

if [ ! -d $HOME/.config/ ]; then
    mkdir $HOME/.config
else
    stow -t $HOME/.config -D .
fi

# create symlinnks for dot files
stow -t $HOME/.config dotfiles/.config

rm -rf ~/.config/nvim
cp -rf $repoPath/dotfiles/config/nvim ~/.config/nvim

rm ~/.tmux.conf
ln -s $repoPath/dotfiles/.tmux.conf ~/.tmux.conf

rm ~/tmuxSelector
ln -s $repoPath/tmuxSelector ~/tmuxSelector
